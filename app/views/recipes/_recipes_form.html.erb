
<%= form_for @recipe do |f|%>
<%= f.label :name, "Name:" %>
<%= f.text_field :name %>
<%= f.label :user, "User:" %>
<%= f.collection_select(:user_id, User.all, :id, :name) %><br><br>
<h3><%= f.label :ingredients, "Ingredients:" %><br></h3>
<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br><br>
<%= f.submit %>
<% end %>